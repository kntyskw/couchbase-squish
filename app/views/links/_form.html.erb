<%- if @link.errors.any? -%>
    <%- @link.errors.each do |field, message| -%>
        <strong><%= field.to_s.upcase %></strong> <%= message %>.
    <%- end -%>
<%- end -%>
<%= form_for @link, :remote => true do |f| %>
    <%= f.text_field :url, :placeholder => "Enter your URL..." %>
    <%= f.submit "Squish It", :name => nil %>
<%- end -%>
